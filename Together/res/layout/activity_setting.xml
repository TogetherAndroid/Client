<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_background"
        android:gravity="center"
        android:text="设置"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <Button
        android:id="@+id/setting_back"
		style="@style/btn_back"
        android:background="@drawable/title_back" />

    <ImageView
        android:layout_toRightOf="@+id/setting_back"
        style="@style/division_left"
        android:src="@drawable/title_division" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/setting_title"
        android:scaleType="fitXY"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/logoutButton"
        style="@style/com_sina_weibo_sdk_loginview_default_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/imageView1" />
"

</RelativeLayout>