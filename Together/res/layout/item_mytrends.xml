<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_food"
    android:orientation="vertical" >

    <com.xt.together.waterfall.ScaleImageView
        android:id="@+id/item_mytrends_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@null" />

    <TextView
        android:id="@+id/item_mytrends_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#656565" />

    <TextView
        android:id="@+id/item_mytrends_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:gravity="right"
        android:textColor="#9f9f9f" />
    
    <TextView
        android:id="@+id/item_mytrends_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:gravity="right"
        android:textColor="#9f9f9f" />

</LinearLayout>