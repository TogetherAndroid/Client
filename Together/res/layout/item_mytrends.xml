<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_food"
    android:orientation="vertical" >

    <com.xt.together.waterfall.ScaleImageView
        android:id="@+id/item_mytrends_img"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:src="@drawable/empty_photo" />

    <TextView
        android:id="@+id/item_mytrends_shop"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:textColor="#222222" 
        android:layout_marginLeft="30dp"
        android:text="寿司"/>

    <TextView
        android:id="@+id/item_mytrends_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textColor="#222222"
        android:layout_marginLeft="30dp"
        android:text="好好吃..." />
    
    <TextView
        android:id="@+id/item_mytrends_share"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:textColor="#222222"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="来自xxx" />

</LinearLayout>