<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/invitedetail_title"
        android:layout_width="fill_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="@string/myrecipe_invite"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ImageView
        android:id="@+id/invitedetail_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/invitedetail_title"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/bear_click" />

    <TextView
        android:id="@+id/invitedetail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/invitedetail_img"
        android:layout_centerHorizontal="true"
        android:text="名字XXX"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/invitedetail_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/invitedetail_img"
        android:layout_alignLeft="@+id/invitedetail_name"
        android:text="位置XXX"
        android:textAppearance="?android:attr/textAppearanceMedium" />


    <TextView
        android:id="@+id/invitedetail_invite"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/invitedetail_back"
        android:layout_below="@+id/invitedetail_img"
        android:layout_marginTop="26dp"
        android:singleLine="false"
        android:text="邀请 \n @XXX    @XXX \n 一起去吃"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/invitedetail_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/invitedetail_invite"
        android:layout_below="@+id/invitedetail_invite"
        android:layout_marginTop="65dp"
        android:text="时间XXXXXXXXXXX"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/invitedetail_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/invitedetail_address"
        android:layout_below="@+id/invitedetail_address"
        android:text="联系我XXXXXXXXXXX"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/invitedetail_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/invitedetail_date"
        android:layout_below="@+id/invitedetail_date"
        android:text="地点XXXXXXXXXXX"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/invitedetail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="返回" />

    <Button
        android:id="@+id/invitedetail_sina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="28dp"
        android:text="新浪微博" />

</RelativeLayout>