        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/title_background"
        android:gravity="center"
        android:text="@string/myrecipe_invite"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textSize="25sp" />
    
    <Button
        android:id="@+id/invitedetail_back"
        style="@style/btn_back"
        android:background="@drawable/title_back" />

    
    <ImageView 
        android:id="@+id/invitedetail_share"
        android:layout_alignBottom="@+id/invitedetail_title"
        style="@style/btn_setting"
        android:src="@drawable/food_detail_share"
        />
    
