        	        android:layout_centerVertical="true"
        	        android:layout_toRightOf="@+id/invitedetail_location_pic"
        	        android:layout_marginLeft="20dp"
        	        android:textSize="14sp"
        	        android:textColor="#000000"
        	        />
        	    
        	</RelativeLayout>
        	
        	<RelativeLayout 
        	    android:id="@+id/invitedetail_phone_layout"
   		    	android:layout_width="fill_parent"
   		    	android:layout_height="wrap_content"
   		    	android:layout_marginLeft="10dp"
   		    	android:layout_marginRight="12dp"
   		    	android:layout_marginTop="0dp"
   		    	android:background="@drawable/invitedetail_invite_layout"
   		    	android:layout_below="@+id/invitedetail_location_layout"
        	    >
        	    
        	    <ImageView 
        	        android:id="@+id/invitedetail_phone_pic"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_centerVertical="true"
        	        android:layout_marginLeft="10dp"
        	        android:src="@drawable/invitedetail_phone_pic"
        	        />
        	    
        	    <TextView 
        	        android:id="@+id/invitedetail_phone_text"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_centerVertical="true"
        	        android:layout_toRightOf="@+id/invitedetail_phone_pic"
        	        android:layout_marginLeft="20dp"
        	        android:textSize="14sp"
        	        android:textColor="#000000"
        	        />
        	    
        	</RelativeLayout>
        	
        	<RelativeLayout 
        	    android:id="@+id/invitedetail_tuan"
        	    android:layout_width="fill_parent"
   		    	android:layout_height="wrap_content"
   		    	android:layout_marginLeft="10dp"
   		    	android:layout_marginRight="12dp"
   		    	android:layout_marginTop="12dp"
   		    	android:background="@drawable/invitedetail_invite_layout"
   		    	android:layout_below="@+id/invitedetail_phone_layout"       	    
        	    >
        	    
        	    <TextView 
        	        android:id="@+id/invitedetail_tuan"
        	        android:layout_width="wrap_content"
        	        android:layout_height="wrap_content"
        	        android:layout_centerInParent="true"
        	        android:textSize="14sp"
        	        android:textColor="#000000"
        	        android:text="@string/invitedetail_tuan"
        	        />
        	    
        	    
        	</RelativeLayout>
        	
    	</RelativeLayout>
    	   	
    </ScrollView>
    
