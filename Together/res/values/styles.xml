<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="tab_item">
        <item name="android:gravity">center_horizontal</item>  
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>         
        <item name="android:drawablePadding">5dip</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:textSize">10.0dip</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:ellipsize">marquee</item>       
        <item name="android:singleLine">true</item>
    </style>
    
    <style name="btn_setting">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginBottom">9dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    
    <style name="division_right">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    
    <style name="btn_back">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    
    <style name="division_left">
        <item name="android:layout_width">3dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

</resources>